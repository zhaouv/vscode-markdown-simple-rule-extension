{
    "name": "markdown-simple-rule-extension",
    "displayName": "Markdown Simple Rule Extension",
    "description": "add some simple rules",
    "version": "0.0.1",
    "publisher": "zhaouv",
    "engines": {
        "vscode": "^1.1.6"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.convertClassNameRule",
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
              "command": "extension.convertClassNameRule",
              "title": "Convert ClassName Rule"
            }
          ],
          "keybindings": [
            {
              "command": "extension.convertClassNameRule",
              "key": "ctrl+alt+c",
              "mac": "cmd+alt+c",
              "when": "editorTextFocus"
            }
          ],
          "markdown.markdownItPlugins": true
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}